{
  "firestore": {
    "rules": "firestore.rules.dev",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "../firebase-functions",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    },
    "functions": {
      "port": 5001
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "singleProjectMode": true
  }
}
